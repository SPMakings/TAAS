<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_assign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.spm.taas.AssignActivity"
    tools:showIn="@layout/activity_assign">

    <com.spm.taas.customview.TextViewIkarosRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a teacher to assign the problem."
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/teacher_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


</LinearLayout>
